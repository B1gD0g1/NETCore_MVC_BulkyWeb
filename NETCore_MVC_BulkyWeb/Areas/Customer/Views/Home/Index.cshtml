@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded product-image" />
                        <div class="card-body pb-0">
                            <div class="ps-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">
                                    @product.Title
                                </p>
                                <p class="card-title text-warning text-center">
                                    作者：@product.Author
                                </p>
                            </div>
                            <div class="ps-1">
                                <p class="text-dark text-opacity-75 text-center my-1">
                                    价格：
                                    <span class="text-decoration-line-through">
                                        @product.ListPrice.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div class="ps-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    最低优惠价：<span>@product.Price100.ToString("c")</span>
                                </p>
                            </div>
                        </div>

                        <div>
                            <a asp-controller="Home" asp-action="Details"
                               asp-route-productId="@product.ProductId"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                详情
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>