@model ProductViewModel

<div class="card shadow border-0 my-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-1">@(Model.Product.ProductId != 0 ? "更新" : "创建")类别</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.ProductId" hidden />
            <input asp-for="Product.ImageUrl" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border-0 p-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating py-2 col-12">
                            @* <label class="p-0">类别名称</label> *@
                            <input asp-for="Product.Title" class="form-control border-0 shadow" />
                            <label asp-for="Product.Title" class="ms-1"></label>
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 mt-1 col-12">
                            <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
                            <label asp-for="Product.Description" class="ms-1"></label>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 mt-1 col-12">
                            <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                            <label asp-for="Product.ISBN" class="ms-1"></label>
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 mt-1 col-12">
                            <input asp-for="Product.Author" class="form-control border-0 shadow" />
                            <label asp-for="Product.Author" class="ms-1"></label>
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 mt-1 col-12">
                            <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                            <label asp-for="Product.ListPrice" class="ms-1"></label>
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 mt-1 col-12">
                            <input asp-for="Product.Price" class="form-control border-0 shadow" />
                            <label asp-for="Product.Price" class="ms-1"></label>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 mt-1 col-12">
                            <input asp-for="Product.Price50" class="form-control border-0 shadow" />
                            <label asp-for="Product.Price50" class="ms-1"></label>
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 mt-1 col-12">
                            <input asp-for="Product.Price100" class="form-control border-0 shadow" />
                            <label asp-for="Product.Price100" class="ms-1"></label>
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 mt-1 col-12">
                            <select asp-for="Product.CategoryId" asp-items="@Model.CatetoryList" class="form-select border-0 shadow">
                                <option disabled selected>--选择类别--</option>
                            </select>
                            <label asp-for="Product.CategoryId" class="ms-1"></label>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 mt-1 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Product.ImageUrl" class="ms-1"></label>
                            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.ProductId != 0)
                                {
                                    <button class="btn btn-primary form-control">更新</button>
                                }
                                else
                                {
                                    <button class="btn btn-primary form-control">创建</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a class="btn btn-secondary border form-control" asp-controller="Product" asp-action="Index">返回</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-2">
                    <img src="@Model.Product.ImageUrl" width="100%"
                         style="border-radius:10px; border:1px solid #bbb9b9" />
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}