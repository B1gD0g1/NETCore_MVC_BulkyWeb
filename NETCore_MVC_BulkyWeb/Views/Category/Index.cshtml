@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-1">类别表</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pd-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &ensp;创建新的类别
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped mt-3">
            <thead>
                <tr>
                    <th>类别名称</th>
                    <th>显示顺序</th>
                    <th class="col-4"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.DisplayOrder</td>
                        <td class="text-center col-4">
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i> &ensp;编辑
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> &ensp;删除
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
