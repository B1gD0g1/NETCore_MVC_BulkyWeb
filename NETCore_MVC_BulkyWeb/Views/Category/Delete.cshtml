@model Category

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">删除类别</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            @* <label class="p-0">类别名称</label> *@
            <label class="p-0" asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            @* <label class="p-0">显示顺序</label> *@
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-danger form-control">删除</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-secondary border form-control" asp-controller="Category" asp-action="Index">返回</a>
            </div>
        </div>

    </div>
</form>


